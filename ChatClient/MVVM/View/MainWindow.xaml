<Window x:Class="MaxPlusPlusMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxPlusPlusMessenger" 
        xmlns:viewmodel="clr-namespace:ChatClient.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="474" Width="816">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <DockPanel>
            <!-- Поля для ввода данных подключения -->
            <StackPanel DockPanel.Dock="Top" Margin="5">
                <TextBlock Text="Username:" FontWeight="Bold"/>
                <TextBox Height="25" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Server IP:" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox Height="25" Text="{Binding ServerIP, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Port:" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox Height="25" Text="{Binding ServerPort, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Height="30" Content="Connect" Command="{Binding ConnectToServerCommand}" 
                        Margin="0,10,0,0" Background="LightGreen"/>
            </StackPanel>

            <ListView ItemsSource="{Binding Users}" Margin="5">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding UserName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

        <StackPanel Grid.Column="1">
            <ListView Height="380" ItemsSource="{Binding Messages}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal">
                <TextBox Height="55" Width="530" VerticalContentAlignment="Center" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Width="70" Content="Send" Command="{Binding SendMessageCommand}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
